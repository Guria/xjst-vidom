# EditorConfig is awesome: http://editorconfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8

end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

indent_style = space
indent_size = 2

max_line_length = 120

[{Makefile,GNUmakefile}]
indent_style = tab

[{*.yml,*.yaml}]
trim_trailing_whitespace = false
indent_size = 2

[*.json]
indent_size = 2
